<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.gr.java_conf.foobar.testmaker.service">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".TestMakerApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_testmaker_small"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.FirebaseActivity"></activity>

        <meta-data
            android:name="studyplus_comsumer_key"
            android:value="${studyplus_consumer_key}" />
        <meta-data
            android:name="secret_studyplus_comsumer_key"
            android:value="${secret_studyplus_consumer_key}" />
        <meta-data
            android:name="testmaker_admob_key"
            android:value="${testmaker_admob_key}" />
        <meta-data
            android:name="ncbm_app_key"
            android:value="${ncbm_app_key}" />
        <meta-data
            android:name="ncbm_client_key"
            android:value="${ncbm_client_key}" />
        <meta-data
            android:name="com.google.android.gms.ads.jp.gr.java_conf.foobar.testmaker.service"
            android:value="hogehoge" />
        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PlayActivity"
            android:label="解答"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".activities.EditActivity"
            android:label="編集"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ResultActivity"
            android:label="結果"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CategorizedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.EditProActivity"
            android:label="@string/title_activity_edit_pro"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.ShowTestsActivity" />
        <activity android:name=".activities.BaseActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.OnlineMainActivity"
            android:label="@string/title_activity_online_main"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.MyPageActivity" />
        <activity
            android:name=".activities.MoveQuestionsActivity"
            android:label="@string/title_activity_move_questions"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.StudyPlusActivity"
            android:label="@string/title_activity_study_plus"
            android:theme="@style/AppTheme" />
    </application>

</manifest>
