<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_holo</item>
        <item name="colorPrimaryDark">@color/blue_holo</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/blue_holo</item>
        <item name="android:windowAnimationStyle">@style/Activity2Anim</item>

    </style>

    <style name="Activity2Anim">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_appear</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha_gone</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_gone</item>
        <item name="android:activityCloseEnterAnimation">@anim/alpha_appear</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Design.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/blue_holo
        </item><!-- 何も入力してないとき入力フォーム内のHintの色 --><!-- 通常時EditTextの下線 -->
        <item name="colorControlActivated">@color/blue_holo</item><!-- フォーカス時の下線の色 -->
    </style>

    <style name="AppTheme.Design.TextAppearance.Design.Hint" parent="TextAppearance.AppCompat.Caption"><!-- 上の方のhintの表示サイズ -->
        <item name="android:textColor">@color/blue_holo</item><!--  上の方のhintの表示の色 -->
    </style>

    <style name="button_choose_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/element_spacing_small</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySwitchStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/blue_holo</item>
    </style>

    <style name="MyColorBoxStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_margin">@dimen/element_spacing_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:contentDescription">@string/image</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/element_spacing_small</item>
        <item name="android:theme">@style/AppTheme.Design.TextInputLayout</item>

    </style>

    <style name="MyEditTextSingleLine" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:inputType">text</item>

    </style>

    <style name="MyEditTextMultiLine" parent="MyEditTextSingleLine">

        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">2</item>

    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_height_very_large</item>
        <item name="android:layout_marginLeft">@dimen/element_spacing_small</item>
        <item name="android:layout_marginRight">@dimen/element_spacing_small</item>

    </style>

    <style name="MyCheckBoxStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:background">@drawable/checkbox_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@color/white</item>
        <item name="android:layout_margin">@dimen/element_spacing_small</item>
        <item name="android:paddingTop">@dimen/element_spacing_very_large</item>
        <item name="android:paddingBottom">@dimen/element_spacing_very_large</item>
        <item name="android:paddingLeft">@dimen/element_spacing_normal</item>
        <item name="android:paddingRight">@dimen/element_spacing_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_large</item>

    </style>

    <style name="MyStartCheckBoxStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">@dimen/element_spacing_small</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>


    </style>

</resources>
