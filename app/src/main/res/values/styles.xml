<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitionAnimation</item>
    </style>

    <style name="ActivityTransitionAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_appear</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha_gone</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_gone</item>
        <item name="android:activityCloseEnterAnimation">@anim/alpha_appear</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="AppTheme.Design.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorPrimary
        </item><!-- 何も入力してないとき入力フォーム内のHintの色 --><!-- 通常時EditTextの下線 -->
        <item name="colorControlActivated">@color/colorPrimary</item><!-- フォーカス時の下線の色 -->
    </style>

    <style name="ThemeOverlay.Button.Accent" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ボタン関連のスタイル-->
    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Primary">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Button.Primary.TextWide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Button.Primary.RectImage">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Button.Accent">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">@dimen/element_spacing_very_small</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="MyColorBoxStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_margin">@dimen/element_spacing_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:contentDescription">@string/image</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.Design.TextInputLayout</item>

    </style>

    <style name="MyEditTextSingleLine" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:inputType">text</item>

    </style>

    <style name="MyEditTextMultiLine" parent="MyEditTextSingleLine">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="EditText.MultiLine">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="Switch">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:background">@drawable/checkbox_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@color/white</item>
        <item name="android:layout_margin">@dimen/element_spacing_small</item>
        <item name="android:paddingTop">@dimen/element_spacing_very_large</item>
        <item name="android:paddingBottom">@dimen/element_spacing_very_large</item>
        <item name="android:paddingLeft">@dimen/element_spacing_normal</item>
        <item name="android:paddingRight">@dimen/element_spacing_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_large</item>

    </style>

    <style name="MyStartCheckBoxStyle" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">@dimen/element_spacing_small</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>
</resources>
