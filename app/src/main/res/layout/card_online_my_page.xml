<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="document"
            type="com.google.firebase.firestore.DocumentSnapshot" />

        <variable
            name="title"
            type="String" />

        <variable
            name="size"
            type="String" />

        <variable
            name="colorId"
            type="Integer" />

        <variable
            name="listener"
            type="jp.gr.java_conf.foobar.testmaker.service.view.online.FirebaseMyPageController.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            style="@style/Card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/element_spacing_very_small"
                android:splitMotionEvents="false">

                <ImageButton
                    android:id="@+id/color"
                    android:layout_width="@dimen/element_spacing_small"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/element_spacing_normal"
                    android:background="@drawable/circle"
                    android:contentDescription="@null"
                    android:testColor="@{colorId}"
                    custom:layout_constraintTop_toTopOf="parent"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/text_title_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_normal"
                    android:layout_marginTop="@dimen/element_spacing_normal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@{title}"
                    android:maxLines="2"
                    android:textSize="@dimen/text_size_medium"
                    custom:layout_constraintLeft_toRightOf="@id/color"
                    custom:layout_constraintRight_toLeftOf="@id/play"
                    custom:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_normal"
                    android:layout_marginBottom="@dimen/element_spacing_small"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintLeft_toRightOf="@id/color"
                    custom:layout_constraintRight_toLeftOf="@id/play">

                    <TextView
                        android:id="@+id/num_questions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/element_spacing_small"
                        android:layout_weight="2"
                        android:gravity="start"
                        android:text="@{size}"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <jp.gr.java_conf.foobar.testmaker.service.view.share.ImageTextButton
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> listener.onClickDownloadTest(document)}"
                    custom:image="@drawable/ic_file_download_white"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintRight_toLeftOf="@id/delete"
                    custom:layout_constraintTop_toTopOf="parent"
                    custom:text="@string/download_test" />

                <jp.gr.java_conf.foobar.testmaker.service.view.share.ImageTextButton
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> listener.onClickDeleteTest(document)}"
                    custom:image="@drawable/ic_delete_white"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintRight_toLeftOf="@id/open"
                    custom:layout_constraintTop_toTopOf="parent"
                    custom:text="@string/delete" />

                <jp.gr.java_conf.foobar.testmaker.service.view.share.ImageTextButton
                    android:id="@+id/open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> listener.onClickDetailTest(document)}"
                    custom:image="@drawable/ic_info_white"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintRight_toRightOf="parent"
                    custom:layout_constraintTop_toTopOf="parent"
                    custom:text="@string/info" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>