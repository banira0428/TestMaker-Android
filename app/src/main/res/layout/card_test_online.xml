<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/MyCardViewStyle"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        custom:cardCornerRadius="@dimen/element_spacing_small"
        custom:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:splitMotionEvents="false">

            <ImageButton
                android:id="@+id/color"
                android:layout_width="@dimen/element_spacing_small"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/element_spacing_normal"
                android:background="@drawable/circle"
                android:contentDescription="@string/image"
                custom:layout_constraintLeft_toLeftOf="parent" />


            <TextView
                android:id="@+id/text_title_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_spacing_normal"
                android:layout_marginStart="@dimen/element_spacing_normal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textSize="@dimen/text_size_medium"
                custom:layout_constraintLeft_toRightOf="@id/color"
                custom:layout_constraintRight_toLeftOf="@id/play"
                custom:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/element_spacing_normal"
                android:layout_marginBottom="@dimen/element_spacing_small"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintRight_toLeftOf="@id/play"
                custom:layout_constraintLeft_toRightOf="@id/color">

                <TextView
                    android:id="@+id/num_questions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/element_spacing_small"
                    android:layout_marginRight="@dimen/element_spacing_small"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/num_download"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/element_spacing_small"
                    android:layout_marginRight="@dimen/element_spacing_small"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:textSize="@dimen/text_size_small" />


            </LinearLayout>

            <jp.gr.java_conf.foobar.testmaker.service.views.ImageTextButton
                android:id="@+id/play"
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/element_spacing_small"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:layout_marginRight="@dimen/element_spacing_small"
                android:layout_weight="1.3"
                custom:image="@drawable/ic_file_download_white"
                custom:layout_constraintRight_toLeftOf="@id/open"
                custom:text="@string/download_test" />

            <jp.gr.java_conf.foobar.testmaker.service.views.ImageTextButton
                android:id="@+id/open"
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/element_spacing_small"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:layout_marginRight="@dimen/element_spacing_small"
                android:layout_weight="1.3"
                custom:image="@drawable/ic_info_white"
                custom:layout_constraintRight_toRightOf="parent"
                custom:text="@string/info" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>