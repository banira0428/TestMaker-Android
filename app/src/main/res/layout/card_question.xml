<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_very_large"
        android:layout_marginLeft="@dimen/element_spacing_small"
        android:layout_marginTop="@dimen/element_spacing_small"
        android:layout_marginRight="@dimen/element_spacing_small"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/element_spacing_small"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/element_spacing_small">

            <TextView
                android:id="@+id/order"
                android:layout_width="@dimen/width_order"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_ssmall"
                app:layout_constraintLeft_toLeftOf="parent"
                />


            <TextView
                android:id="@+id/problem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/element_spacing_small"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintRight_toLeftOf="@id/edit"
                app:layout_constraintLeft_toRightOf="@id/order"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/answer"/>

            <TextView
                android:id="@+id/answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/element_spacing_small"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="start"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintRight_toLeftOf="@id/edit"
                app:layout_constraintLeft_toRightOf="@id/order"
                app:layout_constraintTop_toBottomOf="@id/problem"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <jp.gr.java_conf.foobar.testmaker.service.views.ImageTextButton
                android:id="@+id/edit"
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/element_spacing_small"
                android:layout_marginRight="@dimen/element_spacing_small"
                app:layout_constraintRight_toLeftOf="@id/delete"
                custom:image="@drawable/ic_edit_white"
                custom:text="@string/edit" />

            <jp.gr.java_conf.foobar.testmaker.service.views.ImageTextButton
                android:id="@+id/delete"
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/element_spacing_small"
                custom:image="@drawable/ic_delete_white"
                custom:text="@string/delete"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>