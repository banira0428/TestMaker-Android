<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <Button
        android:id="@+id/button"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text"
        android:layout_alignTop="@+id/text" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingTop="@dimen/element_spacing_very_large"
        android:paddingBottom="@dimen/element_spacing_very_large"
        android:paddingStart="@dimen/element_spacing_normal"
        android:paddingEnd="@dimen/element_spacing_normal"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_large"
        android:text="@string/pass"
        android:textColor="@color/white"
        android:elevation="2dp"
        android:translationZ="2dp"/>

</RelativeLayout>