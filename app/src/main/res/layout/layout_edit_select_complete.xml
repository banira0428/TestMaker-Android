<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <View
        android:id="@+id/center_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_select_complete_1"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignEnd="@+id/center_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/center_view">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/set_select_complete_1"
            style="@style/MyEditTextMultiLine"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_select_complete_2"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignLeft="@+id/center_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/center_view">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/set_select_complete_2"
            style="@style/MyEditTextMultiLine"
             />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_select_complete_3"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignEnd="@+id/center_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/center_view"
        android:layout_below="@+id/textInputLayout_select_complete_1">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/set_select_complete_3"
            style="@style/MyEditTextMultiLine"
             />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_select_complete_4"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignLeft="@+id/center_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/center_view"
        android:layout_below="@+id/textInputLayout_select_complete_2">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/set_select_complete_4"
            style="@style/MyEditTextMultiLine"
             />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_select_complete_5"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignEnd="@+id/center_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/center_view"
        android:layout_below="@+id/textInputLayout_select_complete_3">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/set_select_complete_5"
            style="@style/MyEditTextMultiLine"
             />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_select_complete_6"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignLeft="@+id/center_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/center_view"
        android:layout_below="@+id/textInputLayout_select_complete_4">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/set_select_complete_6"
            style="@style/MyEditTextMultiLine"
            />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>