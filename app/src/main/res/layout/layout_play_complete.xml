<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_write_and"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:id="@+id/center_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_answer_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/center_view"
        android:layout_margin="@dimen/element_spacing_small"
        android:theme="@style/AppTheme.Design.TextInputLayout">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/set_answer_1"
            android:hint="@string/hint_answer1"
            style="@style/MyEditTextSingleLine"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_answer_2"
        android:layout_alignStart="@+id/center_view"
        android:layout_alignParentEnd="true"
        style="@style/MyTextInputLayoutStyle"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/set_answer_2"
            android:hint="@string/hint_answer2"
            style="@style/MyEditTextSingleLine"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_answer_3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/center_view"
        android:layout_below="@+id/textInputLayout_answer_1"
        style="@style/MyTextInputLayoutStyle"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/set_answer_3"
            android:hint="@string/hint_answer3"
            style="@style/MyEditTextSingleLine"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_answer_4"
        android:layout_alignStart="@+id/center_view"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayout_answer_1"
        style="@style/MyTextInputLayoutStyle"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/set_answer_4"
            android:hint="@string/hint_answer4"
            style="@style/MyEditTextSingleLine"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_judge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/button_choose_normal"
        android:text="@string/ok"
        android:layout_below="@+id/textInputLayout_answer_3"
        />

</RelativeLayout>