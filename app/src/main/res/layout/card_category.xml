<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="category"
            type="jp.gr.java_conf.foobar.testmaker.service.domain.Category" />

        <variable
            name="selected"
            type="Boolean" />

        <variable
            name="size"
            type="String" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />

        <import type="jp.gr.java_conf.foobar.testmaker.service.R" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            style="@style/Card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:splitMotionEvents="false">

                <ImageButton
                    android:id="@+id/color"
                    android:layout_width="@dimen/element_spacing_small"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/element_spacing_normal"
                    android:background="@drawable/circle"
                    android:contentDescription="@null"
                    android:testColor="@{category.color}"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintLeft_toLeftOf="parent"
                    custom:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/text_title_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_small"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@{category.name}"
                    android:textSize="@dimen/text_size_medium"
                    custom:layout_constraintLeft_toRightOf="@id/color"
                    custom:layout_constraintRight_toLeftOf="@id/open"
                    custom:layout_constraintTop_toTopOf="@id/color" />


                <TextView
                    android:id="@+id/num_questions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_small"
                    android:layout_marginTop="@dimen/element_spacing_normal"
                    android:gravity="start"
                    android:text="@{size}"
                    android:textSize="@dimen/text_size_ssmall"
                    custom:layout_constraintLeft_toRightOf="@id/color"
                    custom:layout_constraintRight_toLeftOf="@id/open"
                    custom:layout_constraintBottom_toBottomOf="@id/color" />

                <ImageButton
                    android:id="@+id/open"
                    android:onClick="@{onClick}"
                    android:src="@{selected ? @drawable/ic_close_white : @drawable/ic_folder_open_white}"
                    style="@style/Button.Primary.RectImage"
                    custom:layout_constraintEnd_toEndOf="parent"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintTop_toTopOf="parent"
                     />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>