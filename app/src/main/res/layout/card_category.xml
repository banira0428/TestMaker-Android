<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="category"
            type="String" />

        <variable
            name="colorId"
            type="Integer" />

        <variable
            name="listener"
            type="jp.gr.java_conf.foobar.testmaker.service.view.main.MainController.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            style="@style/Card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:splitMotionEvents="false">

                <ImageButton
                    android:id="@+id/color"
                    android:layout_width="@dimen/element_spacing_small"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/element_spacing_normal"
                    android:background="@drawable/circle"
                    android:contentDescription="@null"
                    android:testColor="@{colorId}"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintLeft_toLeftOf="parent"
                    custom:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/text_title_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_small"
                    android:layout_marginTop="@dimen/element_spacing_large"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@{category}"
                    android:textSize="@dimen/text_size_medium"
                    custom:layout_constraintLeft_toRightOf="@id/color"
                    custom:layout_constraintRight_toLeftOf="@id/open"
                    custom:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/num_questions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_small"
                    android:layout_marginTop="@dimen/element_spacing_normal"
                    android:gravity="start"
                    android:textSize="@dimen/text_size_small"
                    custom:layout_constraintLeft_toRightOf="@id/color"
                    custom:layout_constraintRight_toLeftOf="@id/open"
                    custom:layout_constraintTop_toBottomOf="@id/text_title_category" />

                <jp.gr.java_conf.foobar.testmaker.service.view.share.ImageTextButton
                    android:id="@+id/open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->listener.onClickOpen(category)}"
                    custom:image="@drawable/ic_folder_open_white"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintRight_toRightOf="parent"
                    custom:layout_constraintTop_toTopOf="parent"
                    custom:text="@string/open" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>