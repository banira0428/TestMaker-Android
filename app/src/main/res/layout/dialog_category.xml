<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/element_spacing_normal"
    android:paddingRight="@dimen/element_spacing_normal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:contentDescription="@string/image"
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/element_spacing_large"
            android:layout_marginRight="@dimen/element_spacing_normal"
            android:layout_marginEnd="@dimen/element_spacing_normal"
            android:layout_marginTop="@dimen/element_spacing_large"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_color_lens_white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white">

        </ImageButton>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_answer"
            style="@style/MyTextInputLayoutStyle"
            android:layout_weight="0.5"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/set_cate"
                android:hint="@string/new_category"
                style="@style/MyEditTextSingleLine"
                android:imeOptions="actionDone"
                android:maxLength="20" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:contentDescription="@string/image"
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/element_spacing_large"
            android:layout_marginLeft="@dimen/element_spacing_small"
            android:layout_marginStart="@dimen/element_spacing_small"
            android:layout_marginRight="@dimen/element_spacing_normal"
            android:layout_marginEnd="@dimen/element_spacing_normal"
            android:layout_marginTop="@dimen/element_spacing_large"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_spacing_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/old_category"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/textView11"
            android:layout_marginBottom="@dimen/element_spacing_large"
            android:layout_marginLeft="@dimen/element_spacing_normal"
            android:layout_marginStart="@dimen/element_spacing_normal"
            android:layout_toEndOf="@+id/textView11"
            android:layout_toRightOf="@+id/textView11"
            android:background="@android:color/holo_blue_light" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>