<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_play_manual"
    style="?android:attr/buttonBarStyle">

    <Button
        style="@style/Button.Accent"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/action_right"
        android:id="@+id/button_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_mistake"
        />

    <Button
        style="@style/Button.Primary.TextWide"
        android:layout_width="0dp"
        android:text="@string/action_wrong"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_right"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/button_mistake" />

</androidx.constraintlayout.widget.ConstraintLayout>