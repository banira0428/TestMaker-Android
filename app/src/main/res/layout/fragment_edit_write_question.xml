<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="jp.gr.java_conf.foobar.testmaker.service.view.edit.EditQuestionViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_question_write"
            style="@style/MyTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_normal"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/set_problem"
                style="@style/MyEditTextMultiLine"
                android:hint="@string/hint_question"
                android:text="@={viewModel.question}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_write_view"
            style="@style/MyTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_normal"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_question_write">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/set_answer_write"
                style="@style/MyEditTextSingleLine"
                android:hint="@string/hint_answer"
                android:text="@={viewModel.answer}" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/button_add"
            style="@style/Button.Accent"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/element_spacing_large"
            android:text="@string/save_question"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>