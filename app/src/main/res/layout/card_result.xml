<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="question"
            type="jp.gr.java_conf.foobar.testmaker.service.domain.Question" />

        <variable
            name="index"
            type="Integer" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/element_spacing_normal"
        android:paddingBottom="@dimen/element_spacing_normal"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{onClick}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/number"
            android:layout_width="@dimen/width_order"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(index + 1)}"
            android:textSize="@dimen/text_size_small"
            android:layout_marginStart="@dimen/element_spacing_normal"
            android:gravity="start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/problem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/element_spacing_small"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="@{question.question}"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toTopOf="@id/answer"
            app:layout_constraintEnd_toStartOf="@id/correct"
            app:layout_constraintStart_toEndOf="@id/number"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/element_spacing_small"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="@{question.answer}"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/correct"
            app:layout_constraintStart_toEndOf="@id/number"
            app:layout_constraintTop_toBottomOf="@id/problem" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/correct"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="@string/image"
            android:focusable="false"
            android:isVisible="@{question.correct}"
            android:padding="@dimen/element_spacing_normal"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_correct"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/incorrect"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/incorrect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="@string/image"
            android:focusable="false"
            android:isVisible="@{!question.correct}"
            android:padding="@dimen/element_spacing_normal"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_incorrect"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>