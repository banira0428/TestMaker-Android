<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="question"
            type="jp.gr.java_conf.foobar.testmaker.service.domain.Question" />

        <variable
            name="index"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            style="@style/Card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/element_spacing_very_small">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="@dimen/width_order"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_very_small"
                    android:textSize="@dimen/text_size_ssmall"
                    android:text="@{String.valueOf(index + 1)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/problem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_small"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:text="@{question.question}"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toTopOf="@id/answer"
                    app:layout_constraintStart_toEndOf="@id/number"
                    app:layout_constraintEnd_toStartOf="@id/correct"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_spacing_small"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:text="@{question.answer}"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/number"
                    app:layout_constraintEnd_toStartOf="@id/correct"
                    app:layout_constraintTop_toBottomOf="@id/problem" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/correct"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@null"
                    android:contentDescription="@string/image"
                    android:focusable="false"
                    android:padding="@dimen/element_spacing_normal"
                    android:isVisible="@{question.correct}"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_correct"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/incorrect"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/incorrect"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@null"
                    android:contentDescription="@string/image"
                    android:focusable="false"
                    android:padding="@dimen/element_spacing_normal"
                    android:isVisible="@{!question.correct}"
                    android:tint="@color/colorPrimary"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_incorrect"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>