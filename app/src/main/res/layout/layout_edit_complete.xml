<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_answer_complete_1"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignEnd="@+id/center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/center">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/set_answer_write_1"
            style="@style/MyEditTextSingleLine"
            android:hint="@string/hint_answer1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_answer_complete_2"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignLeft="@+id/center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/center">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/set_answer_write_2"
            style="@style/MyEditTextSingleLine"
            android:hint="@string/hint_answer2" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_answer_complete_3"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignEnd="@+id/center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/center"
        android:layout_below="@+id/textInputLayout_answer_complete_1">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/set_answer_write_3"
            style="@style/MyEditTextSingleLine"
            android:hint="@string/hint_answer3" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_answer_complete_4"
        style="@style/MyTextInputLayoutStyle"
        android:layout_alignLeft="@+id/center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/center"
        android:layout_below="@+id/textInputLayout_answer_complete_1">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/set_answer_write_4"
            style="@style/MyEditTextSingleLine"
            android:hint="@string/hint_answer4" />

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>