<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="category"
            type="jp.gr.java_conf.foobar.testmaker.service.domain.Category" />

        <variable
            name="listener"
            type="jp.gr.java_conf.foobar.testmaker.service.view.edit.CategoryController.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:padding="@dimen/element_spacing_small"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{() -> listener.onClickCategory(category)}">

        <ImageButton
            android:id="@+id/color"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:circleTint="@{category.color}"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/element_spacing_normal"
            android:text="@{category.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/color"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="カテゴリ" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
