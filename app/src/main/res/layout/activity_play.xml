<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:title="@string/hint_answer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999"/>

        <LinearLayout
            android:id="@+id/body"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/element_spacing_small"
                android:layout_weight="1"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="@dimen/element_spacing_small"
                card_view:cardUseCompatPadding="true">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport = "true">


                    <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                            <jp.gr.java_conf.foobar.testmaker.service.views.PlayProblemView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/play_problem_view"/>

                            <jp.gr.java_conf.foobar.testmaker.service.views.PlayReviewView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/play_review_view"
                                />

                            <LinearLayout
                                android:id="@+id/layout_miss"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">

                                <LinearLayout
                                    android:id="@+id/layout_mistake"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:gravity="start"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/element_spacing_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_size_large"
                                        android:id="@+id/text_your_answer" />

                                    <Button
                                        android:id="@+id/next"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/element_spacing_small"
                                        android:background="@drawable/button_blue"
                                        android:text="@string/action_next"
                                        android:textColor="@color/white" />

                                </LinearLayout>

                                <LinearLayout

                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/layout_manual">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <Button
                                            android:layout_margin="5dp"
                                            android:layout_weight="1"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/button_add"
                                            android:textColor="@color/white"
                                            android:text="@string/action_right"
                                            android:id="@+id/button_right" />

                                        <Button
                                            android:layout_margin="@dimen/element_spacing_small"
                                            android:layout_weight="1"
                                            android:textColor="@color/white"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/button_blue"
                                            android:text="@string/action_wrong"
                                            android:id="@+id/button_mistake" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout_write"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/answer_write">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/textInputLayout_answer"
                                    style="@style/MyTextInputLayoutStyle"
                                    >

                                    <android.support.v7.widget.AppCompatEditText
                                        android:id="@+id/set_answer"
                                        android:hint="@string/hint_answer"
                                        style="@style/MyEditTextSingleLine"

                                         />
                                </android.support.design.widget.TextInputLayout>

                                <jp.gr.java_conf.foobar.testmaker.service.views.PlayCompleteView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/play_complete_view"/>

                            </FrameLayout>

                            <Button
                                android:id="@+id/judge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/button_blue"
                                android:text="@string/ok"
                                android:textColor="@color/white"
                                android:layout_below="@+id/answer_write"
                                />

                        </RelativeLayout>

                        <jp.gr.java_conf.foobar.testmaker.service.views.PlaySelectView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/play_select_view"/>


                    </LinearLayout>

                    <ImageView
                        android:contentDescription="@string/image"
                        android:id="@+id/right"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="@dimen/element_spacing_normal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/maru"
                        android:visibility="gone" />

                </FrameLayout>

                </ScrollView>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:orientation="vertical" />

        </LinearLayout>



</LinearLayout>