<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/MyCardViewStyle"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        custom:cardCornerRadius="@dimen/element_spacing_small"
        custom:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:splitMotionEvents="false">

            <ImageButton
                android:id="@+id/color"
                android:layout_width="@dimen/element_spacing_small"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/element_spacing_normal"
                android:background="@drawable/circle"
                android:contentDescription="@string/image"
                custom:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/text_title_test"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_spacing_large"
                android:layout_marginStart="@dimen/element_spacing_normal"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textSize="@dimen/text_size_medium"
                custom:layout_constraintLeft_toRightOf="@id/color"
                custom:layout_constraintRight_toLeftOf="@id/play"
                custom:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/num_questions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="@dimen/text_size_small"
                android:layout_marginStart="@dimen/element_spacing_normal"
                android:layout_marginTop="@dimen/element_spacing_normal"
                custom:layout_constraintTop_toBottomOf="@id/text_title_test"
                custom:layout_constraintRight_toLeftOf="@id/play"
                custom:layout_constraintLeft_toRightOf="@id/color"/>


            <jp.gr.java_conf.foobar.testmaker.service.views.ImageTextButton
                android:id="@+id/play"
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:layout_marginEnd="@dimen/element_spacing_small"
                custom:image="@drawable/ic_play_arrow_white"
                custom:layout_constraintRight_toLeftOf="@id/edit"
                custom:text="@string/play" />

            <jp.gr.java_conf.foobar.testmaker.service.views.ImageTextButton
                android:id="@+id/edit"
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/element_spacing_small"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:layout_marginRight="@dimen/element_spacing_small"
                custom:image="@drawable/ic_edit_white"
                custom:layout_constraintRight_toLeftOf="@id/delete"
                custom:text="@string/edit" />

            <jp.gr.java_conf.foobar.testmaker.service.views.ImageTextButton
                android:id="@+id/delete"
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/element_spacing_small"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:layout_marginRight="@dimen/element_spacing_small"
                custom:image="@drawable/ic_delete_white"
                custom:layout_constraintRight_toLeftOf="@id/open"
                custom:text="@string/delete" />

            <jp.gr.java_conf.foobar.testmaker.service.views.ImageTextButton
                android:id="@+id/open"
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/element_spacing_small"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:layout_marginRight="@dimen/element_spacing_small"
                custom:image="@drawable/ic_share_white"
                custom:layout_constraintRight_toRightOf="parent"
                custom:text="@string/share" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>